{
  "version": "1.2.0",
  "name": "Tight â€” Simplified Slack",
  "manifest_version": 2,
  "description": "A browser extension that simplifies the Slack interface, making it easier to focus.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "64": "assets/icon-64.png",
    "128": "assets/icon-128.png",
    "400": "assets/icon-400.png"
  },
  "permissions": ["activeTab", "https://*.slack.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": [],
      "css": ["tight.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": "assets/icon-16.png",
    "default_title": "Tight"
  }
}
